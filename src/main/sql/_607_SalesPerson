-- Output all the names in the table salesperson, who didnâ€™t have sales to company 'RED'.
-- Method 1 : using filters
select name
from salesperson
where sales_id
not in (select sales_id
        from orders
        where com_id in
                    (select com_id
                    from company
                    where name = 'RED'));

-- Method 2: using join instead of filters
select name
from salesperson
where sales_id
not in (select sales_id
        from orders
        join company
        on orders.com_id = company.com_id
        where company.name = 'RED');